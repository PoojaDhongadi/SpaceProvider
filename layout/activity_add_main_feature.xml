<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMainFeatureActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add New Feature"
        android:background="#FF8400"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#FFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feature Name"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/edittext_border"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Seats"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/seats"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/edittext_border"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fees for day "
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/day_pass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/edittext_border"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fees for a month "
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/monthly_pass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/edittext_border"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:textSize="21dp"
        android:background="@drawable/edittext_border"
        android:textAllCaps="false"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btnBack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:textSize="21dp"
        android:textAllCaps="false"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:layout_gravity="center"
        />

</LinearLayout>