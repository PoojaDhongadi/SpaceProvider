<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Feature Name : "
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            android:text="Total Seats : "
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/day_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seats"
            android:layout_marginLeft="10dp"
            android:text="Fees for day : "
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/monthly_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Fees for a month : "
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/day_pass"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>